{
  "name": "vite_react_ts_starter",
  "private": true,
  "version": "0.0.1",
  "description": "A starter production ready template for a vite + react + ts project",
  "repository": {
    "type": "git",
    "url": "https://github.com/esanchezvz/vite_react_ts_starter.git"
  },
  "author": {
    "name": "Esteban Sánchez Vázquez",
    "email": "esteban.sanvaz@gmail.com"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.15"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint:check": "eslint --ignore-path .gitignore --ext .js,.ts,.jsx,.tsx src/",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.jsx,.tsx src/ --fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "preview": "vite preview",
    "test": "jest --config jest/jest.config.js -u",
    "test:coverage": "jest --config jest/jest.config.js --coverage -u",
    "test:watch": "jest --config jest/jest.config.js --watch -u",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "typecheck:watch": "tsc --noEmit --skipLibCheck --watch",
    "version": "npx changeset version"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-react": "^4.0.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "sass": "^1.64.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
