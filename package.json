{
  "name": "vite_react_ts_starter",
  "private": true,
  "version": "0.0.1",
  "description": "A starter production ready template for a vite + react + ts project",
  "repository": {
    "type": "git",
    "url": "https://github.com/esanchezvz/vite_react_ts_starter.git"
  },
  "author": {
    "name": "Esteban Sánchez Vázquez",
    "email": "esteban.sanvaz@gmail.com"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=14",
    "yarn": ">=1.22.15"
  },
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint:check": "eslint --ignore-path .gitignore --ext .js,.ts,.jsx,.tsx src/",
    "lint:fix": "eslint --ignore-path .gitignore --ext .js,.ts,.jsx,.tsx src/ --fix",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "preview": "vite preview",
    "test": "jest --config jest/jest.config.js -u",
    "test:coverage": "jest --config jest/jest.config.js --coverage -u",
    "test:watch": "jest --config jest/jest.config.js --watch -u",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "typecheck:watch": "tsc --noEmit --skipLibCheck --watch",
    "version": "npx changeset version"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^17.0.18",
    "@types/react": "^17.0.33",
    "@types/react-dom": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vitejs/plugin-react": "^1.0.7",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "sass": "^1.49.8",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
